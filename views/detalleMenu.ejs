<!DOCTYPE html>
<html>
  <%- include('./partials/head') -%>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include('./partials/navbar') -%>

    <!-- Header -->
    <%- include('./partials/header') -%>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%= plato.nombre %></h1>
          <br />

          <% if (plato.descripcionDetallada.length > 0) { %>
            <h4><%= plato.descripcionDetallada %></h4>
          <% } else { %>
            <h4><%= plato.default %></h4>
          <% } %>
          <p class="ps-text-grey">
            <%= plato.precio %>
          </p>

          <a href="/">Volver al Men√∫</a>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img src="/images/menu.jpg" class="ps-round ps-image ps-opacity-min" alt="Menu" />
        </div>
      </div>

      <!-- Footer -->
      <%- include('./partials/footer') -%>

    </div>
  </body>
</html>
